@model Student
@{
    ViewData["Title"] = "Delete";
}

<div class="mt-3 border rounded p-4">
    <div>
       <h4>Delete Students</h4>
    </div>
    <div>
        <form method="post" asp-action="Delete">
            <!--<div asp-validation-summary="All"></div>-->
            <input type="text" asp-for="StudentID" hidden/>
            <div>
                <label asp-for="StudentName" class="form-label"></label>
                <input type="text" asp-for="StudentName" class="form-control" disabled/>
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Semester" class="form-label"></label>
                <input type="number" asp-for="Semester" class="form-control" disabled/>
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Class" class="form-label"></label>
                <input type="text" asp-for="Class" class="form-control" disabled/>
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="Student" asp-action="Index" class="btn btn-dark">Go Back</a>
            </div>

        </form>
    </div>
    

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml"></partial>
    }
}
