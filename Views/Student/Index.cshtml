@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}
<div class="mt-3 border rounded p-4">
    <div class="row">
        <div class="col-md-4">
            <h4>Students</h4>
        </div>
        <div class="col-md-8 d-flex justify-content-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-danger text-end">
                 <i class="fas fa-user-plus"></i>
                 &nbsp;Add Student
            </a>
        </div>
    </div>
    <div>
        <table class="table table-hover mt-4 mb-4">
            <thead class="bg-dark text-light">
                <tr>
                    <th>Student Id</th>
                    <th>Student Name</th>
                    <th>Semester</th>
                    <th>Class</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var student in Model)
                {
                    <tr>
                        <td>@student.StudentID</td>
                        <td>@student.StudentName</td>
                        <td>@student.Semester</td>
                        <td>@student.Class</td>
                        <td class="text-center">
                            <a asp-controller="Student" asp-action="Edit" class="btn btn-success" asp-route-id=@student.StudentID>
                                <i class="fas fa-user-edit"></i>&nbsp;Edit
                            </a>
                            <a asp-controller="Student" asp-action="Delete" class="btn btn-danger" asp-route-id=@student.StudentID>
                                <i class="fas fa-trash-alt"></i>&nbsp;Delete
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>


